<div class="payments-header">
   <i class="fa-solid fa-arrow-left"></i>
   <h2>LOGIN</h2>
   <p>Log in</p>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: 'Email', required: true %>
  <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', required: true  %>
  <% if devise_mapping.rememberable? %>
    <div class="field remember-me">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  <%= f.submit "Log in", class:'login' %>
<% end %>

<div class='shared-links'>
  <%= render "devise/shared/links" %>
</div>
